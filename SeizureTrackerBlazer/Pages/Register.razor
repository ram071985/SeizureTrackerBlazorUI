@page "/register"
@attribute [AllowAnonymous]
@inject AccountClient AccountClient
@inject NavigationManager Nav

<div class="container mt-5" style="max-width: 450px;">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-3">Create Account</h2>
        <p class="text-muted text-center small mb-4">
            After creating your account, you will be prompted to enable FaceID for emergency access.
        </p>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger">@_errorMessage</div>
        }

        <EditForm Model="_regModel" OnValidSubmit="HandleRegistration">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label class="form-label">Email Address</label>
                <InputText @bind-Value="_regModel.Email" class="form-control form-control-lg" />
                <ValidationMessage For="@(() => _regModel.Email)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <InputText @bind-Value="_regModel.Password" type="password" class="form-control form-control-lg" />
                <ValidationMessage For="@(() => _regModel.Password)" />
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100 py-3 mt-2" disabled="@_isSubmitting">
                @if (_isSubmitting)
                {
                    <span class="spinner-border spinner-border-sm"></span> <span>Creating...</span>
                }
                else
                {
                    <span>Create Account</span>
                }
            </button>
        </EditForm>

        <div class="text-center mt-4">
            <a href="login" class="text-decoration-none">Already have an account? Login</a>
        </div>
    </div>
</div>

@code {
    private RegisterModel _regModel = new();
    private bool _isSubmitting = false;
    private string? _errorMessage;

    private async Task HandleRegistration()
    {
        _isSubmitting = true;
        _errorMessage = null;

        // Calls the native .NET 10 Identity API endpoint: /register
        var isRegistered = await AccountClient.RegisterUserAsync(_regModel);

        if (isRegistered.Data)
        {
            // After successful registration, send them to login
            // so they can then visit /Account/Manage/Passkeys to set up biometrics
            Nav.NavigateTo("login?registered=true");
        }
        else
        {
            _errorMessage = "Registration failed. Please check your details and try again.";
        }

        _isSubmitting = false;
    }


}