@page "/reports"
@using System.Text
@using System.Globalization
@inject ISeizureTrackerService SeizureService
@inject IJSRuntime JS

<div class="app-screen">
    <div class="content-container">
        <h3 class="page-title text-info">Seizure Reports</h3>
        <p class="text-secondary">Analyze trends and export log history.</p>

        <!-- Filter Section -->
        <div class="log-summary-entry shadow-sm mb-4">
            <div class="row g-2">
                <div class="col-6">
                    <label class="small text-info fw-bold">Start Date</label>
                    <input type="date" @bind="_startDate" class="form-control form-control-sm bg-dark text-white border-secondary" />
                </div>
                <div class="col-6">
                    <label class="small text-info fw-bold">End Date</label>
                    <input type="date" @bind="_endDate" class="form-control form-control-sm bg-dark text-white border-secondary" />
                </div>
                <div class="col-12 mt-3">
                    <button class="btn btn-info btn-sm w-100 fw-bold" @onclick="LoadReportData">
                        <i class="bi bi-filter-circle"></i> Update Report
                    </button>
                </div>
            </div>
        </div>

        @if (_reportData != null)
        {
            <!-- Summary Stats -->
            <div class="row g-3 mb-4">
                <div class="col-6">
                    <div class="log-summary-entry shadow-sm text-center p-3">
                        <span class="d-block text-secondary small">Total Events</span>
                        <span class="h2 text-info mb-0">@_reportData.Count</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="log-summary-entry shadow-sm text-center p-3">
                        <span class="d-block text-secondary small">Top Type</span>
                        <span class="h5 text-white mb-0">@GetTopSeizureType()</span>
                    </div>
                </div>
            </div>

            <!-- Export Action -->
            <div class="log-summary-entry shadow-sm mb-3" @onclick="ExportToCsv" style="cursor: pointer;">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-file-earmark-arrow-down text-info h4 me-2"></i>
                        <span class="h5 mb-0">Download CSV</span>
                    </div>
                    <span class="badge bg-info text-dark">.csv</span>
                </div>
            </div>
        }
    </div>
</div>