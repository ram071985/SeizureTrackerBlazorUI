@page "/log-archives"

<div class="app-screen">
    <div class="header">
        <div class="logo-text">SeizureTracker</div>
        <div class="header-icon-box"></div>
    </div>

    <div class="content-container">
        <h3 class="page-title">Seizure Log Archives</h3>

        <!-- Example Log Entry Structure -->
        <div class="log-entry">
            <div class="log-header-section">
                <span class="log-date">Feb 7, 2026</span>
                <span class="log-time">10:30 AM</span>
            </div>
            <span class="seizure-type simple-type">Simple</span>
            <div class="log-details-section">
                <p>Duration: 30 seconds</p>
                <p>Trigger: Stress</p>
            </div>
        </div>

        <div class="log-entry">
            <div class="log-header-section">
                <span class="log-date">Feb 5, 2026</span>
                <span class="log-time">02:15 PM</span>
            </div>
            <span class="seizure-type complex-type">Complex</span>
            <div class="log-details-section">
                <p>Duration: 2 minutes</p>
                <p>Trigger: Flashing lights</p>
            </div>
        </div>

        <div class="log-entry">
            <div class="log-header-section">
                <span class="log-date">Feb 3, 2026</span>
                <span class="log-time">08:00 AM</span>
            </div>
            <span class="seizure-type reflex-type">Reflex</span>
            <div class="log-details-section">
                <p>Duration: 1 minute</p>
                <p>Trigger: Loud noise</p>
            </div>
        </div>

        <!-- More logs can go here -->

    </div>
</div>

