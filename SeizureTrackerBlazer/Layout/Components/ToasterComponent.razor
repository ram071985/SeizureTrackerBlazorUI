<div id="liveToast" class="toast toaster-snippet" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
        <div class="toast-body align-items-center">
            @_toasterMessage
        </div>
        <button type="button" class="btn-close toaster-button me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

@code {
    private string _toasterMessage;
    [Parameter]
    public string ToasterMessage { get; set; }

    protected override void OnParametersSet()
    {
        _toasterMessage = ToasterMessage;
    }

}