@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary shadow-sm">
    <div class="container">
        <a class="navbar-brand fw-bold text-info" href="/">
            <i class="bi bi-activity me-2"></i>SeizureTracker
        </a>
        <button @ref="@_togglerElement" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navRes" 
                aria-controls="navRes" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navRes">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                        <i class="bi bi-house-door me-1"></i> Quick Log
                    </NavLink>
                </li>
            </ul>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                        <i class="bi bi-archive me-1"></i> Log Archives
                    </NavLink>
                </li>
            </ul>
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex align-items-center">
                        <span class="text-light me-3 d-none d-lg-inline">@context.User.Identity?.Name</span>
                        <button class="btn btn-outline-info btn-sm" @onclick="HandleLogout">
                            Logout
                        </button>
                    </div>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    private ElementReference _togglerElement;
    private IJSObjectReference _module;
    private void HandleLogout() => Navigation.NavigateTo("logout", forceLoad: true);
    
    // Load the JavaScript module after the component is rendered
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // The path points to the JS file you will create next
            _module = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "./js/navbarToggler.js");
            // Call the JS function to set up event listeners
            await _module.InvokeVoidAsync("initializeToggler", _togglerElement, "navRes", "is-open");
        }
    }

    // Clean up the JS reference when the component is disposed to prevent memory leaks
    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        if (_module != null)
        {
            await _module.DisposeAsync();
        }
    }

}
