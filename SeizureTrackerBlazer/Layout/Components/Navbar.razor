@inject NavigationManager Navigation

<nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary shadow-sm">
    <div class="container">
        @* Brand Logo *@
        <a class="navbar-brand fw-bold text-info" href="/">
            <i class="bi bi-activity me-2"></i>SeizureTracker
        </a>

        @* Hamburger Toggler for Mobile *@
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navRes" 
                aria-controls="navRes" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        @* Links - Collapsible *@
        <div class="collapse navbar-collapse" id="navRes">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                        <i class="bi bi-house-door me-1"></i> Dashboard
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/logs">
                        <i class="bi bi-journal-text me-1"></i> History
                    </NavLink>
                </li>
            </ul>
            
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex align-items-center">
                        <span class="text-light me-3 d-none d-lg-inline">@context.User.Identity?.Name</span>
                        <button class="btn btn-outline-info btn-sm" @onclick="HandleLogout">
                            Logout
                        </button>
                    </div>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {
    private void HandleLogout() => Navigation.NavigateTo("logout", forceLoad: true);
}
