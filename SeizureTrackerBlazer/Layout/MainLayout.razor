@inherits LayoutComponentBase
@inject IdentityAuthenticationStateProvider CustomAuthStateProvider
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <Navbar />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <span>Hi, @context.User.Identity?.Name</span>
                    <button class="btn btn-link" @onclick="Logout">Logout</button>
                </Authorized>
                <NotAuthorized>
                    <a href="login">Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
@code
{
    private void Logout()
    {
        // 1. Tell your custom provider to clear the state
        CustomAuthStateProvider.NotifyUserLogout();

        // 2. Redirect to the public home or login page
        Navigation.NavigateTo("login");
    }
}
